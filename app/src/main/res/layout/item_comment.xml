<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_thumb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_thumb"
        app:civ_border_color="@color/lynxWhite"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_thumb"
        android:layout_toEndOf="@id/img_thumb"
        android:layout_marginStart="8dp"
        android:text="用户名" />

    <RatingBar
        android:id="@+id/rb_score"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_name"
        android:layout_alignBottom="@id/img_thumb"/>

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/img_thumb"
        android:text="2018年5月29日"/>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_thumb"
        android:layout_below="@id/img_thumb"
        android:layout_marginTop="8dp" />

</RelativeLayout>